<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.pollub.androidprogrammingfundamentals.Lab02LayoutAndEvents">

    <TextView
        android:id="@+id/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Enter text"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="textPersonName" android:text=""
        android:ems="10" android:layout_below="@+id/my_text" android:layout_alignParentStart="true" android:id="@+id/main_input"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/my_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/my_text" />
    <Button
        android:text="Button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/main_input" android:layout_alignParentStart="true" android:id="@+id/button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/main_input"
        android:layout_marginLeft="0dp"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/main_input" />
</android.support.constraint.ConstraintLayout>
